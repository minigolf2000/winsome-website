= form_for(:replacement, :url => replacement_path, :html => {:class => "replacements"}) do |f|
  %p Please enter info about the item you would like a replacement for.

  %p Disclaimer:
  %ul
    %li
      We can ship replacement parts only to the 50 US States
    %li
      Replacement parts must be ordered within 60 days of the purchased date
    %li
      This form is for individual parts only, not the entire unit. Contact your retailer for refunds or entire unit replacement

  .column
    %fieldset
      %legend Basic Info (Required)
      .section
        = f.label :name
        = f.text_field :name
        .errors
          = @replacement.errors[:name].to_sentence
      .section
        = f.label :address1, value: "Address"
        = f.text_field :address1
        .errors
          = @replacement.errors[:address1].to_sentence
      .section
        = f.label :address2, value: "Address 2"
        = f.text_field :address2
        .errors
          = @replacement.errors[:address2].to_sentence
      .section
        = f.label :city
        = f.text_field :city
        .errors
          = @replacement.errors[:city].to_sentence
      .section
        = f.label :state
        = f.text_field :state
        .errors
          = @replacement.errors[:state].to_sentence
      .section
        = f.label :zip
        = f.text_field :zip
        .errors
          = @replacement.errors[:zip].to_sentence
      .section
        = f.label :phone
        = f.text_field :phone
        .errors
          = @replacement.errors[:phone].to_sentence
      .section
        = f.label :email
        = f.text_field :email
        .errors
          = @replacement.errors[:email].to_sentence
    %fieldset
      %legend Item Info (Required)
      .section
        = f.label :itemno, value: "Item #"
        = f.text_field :itemno
        .errors
          = @replacement.errors[:itemno].to_sentence
      .section
        = f.label :description
        = f.text_field :description
        .errors
          = @replacement.errors[:description].to_sentence
      .section
        = f.label :controlno, value: "Control #"
        = f.text_field :controlno
        .errors
          = @replacement.errors[:controlno].to_sentence
      .section
        = f.label :purchased_at, value: "Purchased Date"
        = f.text_field :purchased_at
        .errors
          = @replacement.errors[:purchased_at].to_sentence
      .section
        = f.label :retailer, value: "Retailer Name"
        = f.text_field :retailer
        .errors
          = @replacement.errors[:retailer].to_sentence
  .column
    %fieldset
      %legend Part Info (Required)
      .section
        = f.label :partno1, value: "Part Letter"
        = f.text_field :partno1
        .errors
          = @replacement.errors[:partno1].to_sentence
      .section
        = f.label :partname1, value: "Part Name"
        = f.text_field :partname1
        .errors
          = @replacement.errors[:partname1].to_sentence
      .section
        = f.label :quantity1, value: "Quantity"
        = f.text_field :quantity1
        .errors
          = @replacement.errors[:quantity1].to_sentence
      .section
        = f.label :reason1, value: "Reason"
        = f.text_field :reason1
        .errors
          = @replacement.errors[:reason1].to_sentence
    %fieldset
      %legend Additional Parts (Optional)
      .section
        = f.label :partno2, value: "Part Letter (2nd item)"
        = f.text_field :partno2
        .errors
          = @replacement.errors[:partno2].to_sentence
      .section
        = f.label :partname2, value: "Part Name (2nd item)"
        = f.text_field :partname2
        .errors
          = @replacement.errors[:partname2].to_sentence
      .section
        = f.label :quantity2, value: "Quantity (2nd item)"
        = f.text_field :quantity2
        .errors
          = @replacement.errors[:quantity2].to_sentence
      .section
        = f.label :reason2, value: "Reason (2nd item)"
        = f.text_field :reason2
        .errors
          = @replacement.errors[:reason2].to_sentence
      %hr
      .section
        = f.label :partno3, value: "Part Letter (3rd item)"
        = f.text_field :partno3
        .errors
          = @replacement.errors[:partno3].to_sentence
      .section
        = f.label :partname3, value: "Part Name (3rd item)"
        = f.text_field :partname3
        .errors
          = @replacement.errors[:partname3].to_sentence
      .section
        = f.label :quantity3, value: "Quantity (3rd item)"
        = f.text_field :quantity3
        .errors
          = @replacement.errors[:quantity3].to_sentence
      .section
        = f.label :reason3, value: "Reason (3rd item)"
        = f.text_field :reason3
        .errors
          = @replacement.errors[:reason3].to_sentence

  .column{:style => "clear: left"}
    .section
      = f.submit :value => "Submit"
